<Window x:Class="Telhai.DotNet.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Height="426"
        Width="350"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Margin="20">

            <TextBlock Text="Song Name"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

            <TextBlock Text="Artist"/>
            <TextBox Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

            <TextBlock Text="Images"/>

            <ListBox x:Name="lstImages"
                     ItemsSource="{Binding Images}"
                     Height="150"
                     Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add Image" Click="BtnAddImage_Click" Margin="5"/>
                <Button Content="Remove" Click="BtnRemoveImage_Click" Margin="5"/>
            </StackPanel>

            <Button Content="Save"
                    Height="35"
                    Margin="0,20,0,20"
                    Click="BtnSave_Click"/>

        </StackPanel>

    </ScrollViewer>
</Window>
